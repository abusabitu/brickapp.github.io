/* Load offerings from Xano */
async function loadOfferings(){
  try{
    const res=await fetch("https://x8ki-letl-twmt.n7.xano.io/api:zrt8IXcf/offer");
    const data=await res.json();
    const container=document.getElementById("offerings-slider");
    data.slice(0,10).forEach(item=>{
      const card=document.createElement("div");
      card.className="offering-card";
      card.innerHTML=`
        <img src="${item.image}" alt="${item.products?.[0]?.Name||'Product'}">
        <div class="offering-info">
          <div class="offering-title">${item.products?.[0]?.Name||'Unnamed Product'}</div>
          <div class="offering-meta">${item.roi||''}</div>
          <div class="offering-meta">₦${item.amount.toLocaleString()}</div>
          <div class="offering-meta outlet-blur">${item.outlet}</div>
        </div>`;
      container.appendChild(card);
    });
    setInterval(()=>{
      container.scrollBy({left:260,behavior:'smooth'});
      if(container.scrollLeft+container.clientWidth>=container.scrollWidth){
        container.scrollTo({left:0,behavior:'smooth'});
      }
    },3000);
  }catch(err){console.error("Failed to load offerings",err);}
}
loadOfferings();
</script>

